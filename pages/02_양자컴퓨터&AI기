from datetime import datetime, timedelta
import plotly.express as px

# í˜ì´ì§€ ì„¤ì •
st.set_page_config(
    page_title="ì£¼ìš” ê¸°ì—… ì£¼ê°€ í˜„í™©",
    page_icon="ğŸ“ˆ",
    layout="wide"
)

# íšŒì‚¬ ëª©ë¡ ì •ì˜ (ê¸°ì¡´ Top 10 + ì–‘ìì»´í“¨í„°/AI ê¸°ì—…)
COMPANIES = {
    "ì‹œì´ Top 10 (2024ë…„ ê¸°ì¤€)": {
        "Apple": "AAPL",
        "Microsoft": "MSFT",
        "Alphabet": "GOOGL",
        "Amazon": "AMZN",
