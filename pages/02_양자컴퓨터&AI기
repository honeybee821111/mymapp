    "AI ê´€ë ¨ ê¸°ì—…": {
        "Google (Alphabet)": "GOOGL", # AI ì—°êµ¬ ë° ë‹¤ì–‘í•œ ì„œë¹„ìŠ¤ì— ì ìš© (ì¤‘ë³µ ê°€ëŠ¥ì„± ìˆì§€ë§Œ ëª…ì‹œì ìœ¼ë¡œ í¬í•¨)
        "Microsoft": "MSFT", # OpenAI íˆ¬ì, Copilot ë“± AI ì„œë¹„ìŠ¤
        "NVIDIA": "NVDA", # AI ì¹© ë° ì†Œí”„íŠ¸ì›¨ì–´
        "Palantir Technologies": "PLTR", # ë¹…ë°ì´í„° ë¶„ì„ ë° AI í”Œë«í¼
        "C3.ai": "AI", # ì—”í„°í”„ë¼ì´ì¦ˆ AI ì†Œí”„íŠ¸ì›¨ì–´
        "SoundHound AI": "SOUN" # ìŒì„± AI ê¸°ìˆ 
    }
}

@st.cache_data
def get_stock_data(ticker, period="3y"):
    """ì£¼ì‹ ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ëŠ” í•¨ìˆ˜"""
    try:
        stock = yf.Ticker(ticker)
        data = stock.history(period=period)
        return data
    except Exception as e:
        st.error(f"{ticker} ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ ë°œìƒ: {e}")
        return None

@st.cache_data
def get_company_info(ticker):
    """íšŒì‚¬ ì •ë³´ë¥¼ ê°€ì ¸ì˜¤ëŠ” í•¨ìˆ˜"""
    try:
        stock = yf.Ticker(ticker)
        info = stock.info
        return {
            'name': info.get('longName', 'N/A'),
            'sector': info.get('sector', 'N/A'),
            'marketCap': info.get('marketCap', 0),
            'currentPrice': info.get('currentPrice', 0)
        }
    except:
        return {'name': 'N/A', 'sector': 'N/A', 'marketCap': 0, 'currentPrice': 0}

def format_market_cap(market_cap):
    """ì‹œê°€ì´ì•¡ì„ ì½ê¸° ì‰¬ìš´ í˜•íƒœë¡œ ë³€í™˜"""
    if market_cap >= 1e12:
        return f"${market_cap/1e12:.2f}T"
    elif market_cap >= 1e9:
        return f"${market_cap/1e9:.2f}B"
    elif market_cap >= 1e6:
        return f"${market_cap/1e6:.2f}M"
    else:
        return f"${market_cap:,.0f}"

def main():
    st.title("ğŸ“ˆ ì£¼ìš” ê¸°ì—… ì£¼ê°€ í˜„í™©")
    st.markdown("ë‹¤ì–‘í•œ ë¶„ì•¼ì˜ ê¸°ì—…ë“¤ì˜ ì£¼ê°€ ë°ì´í„°ë¥¼ í™•ì¸í•´ë³´ì„¸ìš”.")

    # ì‚¬ì´ë“œë°”ì—ì„œ ê¸°ì—… ì¹´í…Œê³ ë¦¬ ë° ê¸°ì—… ì„ íƒ
    st.sidebar.header("ê¸°ì—… ì„ íƒ")

    all_companies_flat = {}
    for category, companies_dict in COMPANIES.items():
        st.sidebar.subheader(category)
        for name, ticker in companies_dict.items():
            all_companies_flat[name] = ticker

    # Flatten the dictionary for multiselect options
    options_for_multiselect = list(all_companies_flat.keys())
    default_selection = list(COMPANIES["ì‹œì´ Top 10 (2024ë…„ ê¸°ì¤€)"].keys())[:3] # Default to 3 from Top 10

    selected_companies_names = st.sidebar.multiselect(
        "ë¶„ì„í•  ê¸°ì—…ì„ ì„ íƒí•˜ì„¸ìš”:",
        options=options_for_multiselect,
        default=default_selection
    )

    if not selected_companies_names:
        st.warning("ìµœì†Œ í•˜ë‚˜ì˜ ê¸°ì—…ì„ ì„ íƒí•´ì£¼ì„¸ìš”.")
        return

    # Map selected company names back to tickers
    selected_companies_tickers = {name: all_companies_flat[name] for name in selected_companies_names}

    # ê¸°ê°„ ì„ íƒ
    period_options = {
        "1ë…„": "1y",
        "2ë…„": "2y",
        "3ë…„": "3y",
        "5ë…„": "5y"
    }

    selected_period = st.sidebar.selectbox(
        "ê¸°ê°„ ì„ íƒ:",
        options=list(period_options.keys()),
        index=2 # ê¸°ë³¸ê°’: 3ë…„
    )

    # ì°¨íŠ¸ íƒ€ì… ì„ íƒ
    chart_type = st.sidebar.radio(
        "ì°¨íŠ¸ íƒ€ì…:",
        ["ë¼ì¸ ì°¨íŠ¸", "ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸"]
    )

    # ë°ì´í„° ë¡œë”©
    with st.spinner("ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘..."):
        stock_data = {}
        company_info = {}

        for company_name, ticker in selected_companies_tickers.items():
            data = get_stock_data(ticker, period_options[selected_period])
            info = get_company_info(ticker)

            if data is not None and not data.empty:
                stock_data[company_name] = data
                company_info[company_name] = info

    if not stock_data:
        st.error("ì„ íƒí•œ ê¸°ì—…ì˜ ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•˜ê±°ë‚˜ ë‹¤ë¥¸ ê¸°ì—…ì„ ì„ íƒí•´ì£¼ì„¸ìš”.")
        return

    # íšŒì‚¬ ì •ë³´ í‘œì‹œ
    st.header("ğŸ“Š ì„ íƒëœ ê¸°ì—… ì •ë³´")
    cols = st.columns(len(selected_companies_names))
    for i, company_name in enumerate(selected_companies_names):
        if company_name in company_info:
            info = company_info[company_name]
            with cols[i % len(cols)]: # Use modulo for more than 4 companies to avoid index error
                st.metric(
                    label=f"{company_name}",
                    value=f"${info['currentPrice']:.2f}",
                    delta=f"ì‹œì´: {format_market_cap(info['marketCap'])}"
                )
                st.caption(f"ì„¹í„°: {info['sector']}")

    # ì£¼ê°€ ì°¨íŠ¸
    st.header("ğŸ“ˆ ì£¼ê°€ ì°¨íŠ¸")

    if chart_type == "ë¼ì¸ ì°¨íŠ¸":
        fig = go.Figure()

        colors = px.colors.qualitative.Set1[:len(selected_companies_names)]

        for i, (company, data) in enumerate(stock_data.items()):
            fig.add_trace(go.Scatter(
                x=data.index,
                y=data['Close'],
                mode='lines',
                name=company,
                line=dict(color=colors[i], width=2),
                hovertemplate=f'<b>{company}</b><br>' +
                               'Date: %{x}<br>' +
                               'Price: $%{y:.2f}<br>' +
                               '<extra></extra>'
            ))

        fig.update_layout(
            title=f"ì£¼ê°€ ì¶”ì´ - {selected_period}",
            xaxis_title="ë‚ ì§œ",
            yaxis_title="ì£¼ê°€ (USD)",
            hovermode='x unified',
            height=600,
            template='plotly_white'
        )

    else:
        # ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸ (ë‹¨ì¼ ê¸°ì—…ë§Œ)
        if len(selected_companies_names) > 1:
            st.info("ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸ëŠ” í•œ ë²ˆì— í•˜ë‚˜ì˜ ê¸°ì—…ë§Œ í‘œì‹œë©ë‹ˆë‹¤. ì²« ë²ˆì§¸ ì„ íƒëœ ê¸°ì—…ì„ í‘œì‹œí•©ë‹ˆë‹¤.")

        company_to_display = selected_companies_names[0]
        data = stock_data[company_to_display]

        fig = go.Figure(data=go.Candlestick(
            x=data.index,
            open=data['Open'],
            high=data['High'],
            low=data['Low'],
            close=data['Close'],
            name=company_to_display
        ))

        fig.update_layout(
            title=f"{company_to_display} ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸ - {selected_period}",
            xaxis_title="ë‚ ì§œ",
            yaxis_title="ì£¼ê°€ (USD)",
            height=600,
            template='plotly_white'
        )

    st.plotly_chart(fig, use_container_width=True)

    # ì„±ê³¼ ë¹„êµ í…Œì´ë¸”
    st.header("ğŸ“Š ì„±ê³¼ ë¹„êµ")

    performance_data = []
    for company, data in stock_data.items():
        if len(data) > 0:
            start_price = data['Close'].iloc[0]
            end_price = data['Close'].iloc[-1]
            total_return = ((end_price - start_price) / start_price) * 100

            # ìµœê³ ê°€, ìµœì €ê°€
            max_price = data['Close'].max()
            min_price = data['Close'].min()

            performance_data.append({
                'ê¸°ì—…': company,
                'ì‹œì‘ ê°€ê²©': f"${start_price:.2f}",
                'í˜„ì¬ ê°€ê²©': f"${end_price:.2f}",
                'ì´ ìˆ˜ìµë¥ ': f"{total_return:.2f}%",
                'ìµœê³ ê°€': f"${max_price:.2f}",
                'ìµœì €ê°€': f"${min_price:.2f}",
                'ë³€ë™ì„±': f"{data['Close'].std():.2f}"
            })

    if performance_data:
        df_performance = pd.DataFrame(performance_data)
        st.dataframe(df_performance, use_container_width=True)

    # ê±°ë˜ëŸ‰ ì°¨íŠ¸
    st.header("ğŸ“Š ê±°ë˜ëŸ‰ ë¶„ì„")

    fig_volume = go.Figure()

    for i, (company, data) in enumerate(stock_data.items()):
        fig_volume.add_trace(go.Scatter(
            x=data.index,
            y=data['Volume'],
            mode='lines',
            name=company,
            line=dict(color=colors[i % len(colors)], width=2),
            hovertemplate=f'<b>{company}</b><br>' +
                               'Date: %{x}<br>' +
                               'Volume: %{y:,.0f}<br>' +
                               '<extra></extra>'
        ))

    fig_volume.update_layout(
        title=f"ê±°ë˜ëŸ‰ ì¶”ì´ - {selected_period}",
        xaxis_title="ë‚ ì§œ",
        yaxis_title="ê±°ë˜ëŸ‰",
        hovermode='x unified',
        height=400,
        template='plotly_white'
    )

    st.plotly_chart(fig_volume, use_container_width=True)

    # ì¶”ê°€ ì •ë³´
    st.header("â„¹ï¸ ì¶”ê°€ ì •ë³´")
    st.info("""
    **ë°ì´í„° ì†ŒìŠ¤**: Yahoo Finance

    **ì£¼ì˜ì‚¬í•­**:
    - ì´ ë°ì´í„°ëŠ” íˆ¬ì ì¡°ì–¸ì´ ì•„ë‹™ë‹ˆë‹¤.
    - ì‹¤ì œ íˆ¬ì ì „ì— ì „ë¬¸ê°€ì™€ ìƒë‹´í•˜ì„¸ìš”.
    - ê³¼ê±° ì„±ê³¼ê°€ ë¯¸ë˜ ì„±ê³¼ë¥¼ ë³´ì¥í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.
    """)

if __name__ == "__main__":
    main()
